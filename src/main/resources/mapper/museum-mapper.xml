<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="museum">
    <insert id="create" parameterType="museum" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO db_ssm.museum (
            name, 
            logo, 
            picture, 
            address
        )
        VALUES (
            #{name}, 
            #{logo}, 
            #{picture}, 
            #{address}
        )
    </insert>
    <delete id="remove">
        DELETE FROM db_ssm.museum
        WHERE museum.id = #{id}
    </delete>
    <update id="modify">
        UPDATE db_ssm.museum
        SET
            name = #{name}, 
            logo = #{logo}, 
            picture = #{picture}, 
            address = #{address}
        WHERE museum.id = #{id}
    </update>
    <select id="queryAll" resultType="museum">
        SELECT *
        FROM db_ssm.museum
        ORDER BY id
    </select>
    <select id="queryById" resultType="museum">
        SELECT *
        FROM db_ssm.museum
        WHERE museum.id = #{id}
    </select>

    <resultMap id="queryMuseums_map" type="museum">
        <result property="name" column="name"/>
        <result property="logo" column="logo"/>
        <result property="picture" column="picture"/>
        <result property="address" column="address"/>
        <collection property="works" ofType="work">
            <result property="title" column="title"/>
        </collection>
    </resultMap>
    <select id="queryMuseums" resultMap="queryMuseums_map">
        SELECT m.name,m.logo,m.picture,m.address,w.title
        FROM db_ssm.museum m LEFT OUTER JOIN db_ssm.work w
        ON m.id = w.museumId
    </select>
</mapper>